<%= render 'shared/page_title', title: "#{@ingredient.name}" %>

<div align="center">
  <%= will_paginate @ingredient_recipes %>
</div>

<% @ingredient_recipes.each do |recipe| %>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 well">
      <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
      <p><%= truncate(recipe.description, length: 150) %></p>
      <% if recipe.ingredients.any? %>
        <p>Ingredients: <%= render recipe.ingredients %>
      <% end %>
      <p>
        <span class="quiet">
          <small>Created <%= time_ago_in_words(recipe.created_at) %> ago</small>
        </span>
      </p>
      <% if logged_in? && current_chef == recipe.chef || current_chef.admin? %>
        <%= link_to "Edit this recipe", edit_recipe_path(recipe), class: "btn btn-purple" %>
        <%= link_to "Delete this recipe", recipe_path(recipe), method: :delete,
                                                                data: { confirm: "Are you sure?" },
                                                                class: "btn btn-purple" %>
      <% end %>
    </div>
  </div>
<% end %>

<div align="center">
  <%= will_paginate @ingredient_recipes %>
</div>
